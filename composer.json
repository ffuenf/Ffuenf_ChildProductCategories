{
  "name": "Ffuenf/Ffuenf_ChildProductCategories",
  "license": "MIT",
  "description": "This is a extension for Magento Community Edition that takes care of assigning the categories of a configurable product to its corresponding simple products.",
  "authors": [
    {
      "name": "Achim Rosenhagen",
      "email": "a.rosenhagen@ffuenf.de"
    }
  ],
  "type": "magento-module",
  "require-dev": {
    "phpunit/phpunit": "4.*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://packages.firegento.com"
    }
  ],
  "extra": {
    "magento-root-dir": "./magento/",
    "map": [
      [
        "app/code/community/Ffuenf/ChildProductCategories",
        "app/code/community/Ffuenf/ChildProductCategories"
      ],
      [
        "app/etc/modules/Ffuenf_ChildProductCategories.xml",
        "app/etc/modules/Ffuenf_ChildProductCategories.xml"
      ],
      [
        "shell/assign_categories.php",
        "shell/assign_categories.php"
      ]
    ]
  }
}