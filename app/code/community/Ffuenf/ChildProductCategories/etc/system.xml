<config>
    <tabs>
        <ffuenf>
            <label>ffuenf</label>
            <sort_order>508</sort_order>
        </ffuenf>
    </tabs>
    <sections>
        <ffuenf_childproductcategories translate="label" module="ffuenf_childproductcategories">
            <tab>ffuenf</tab>
            <label>ChildProductCategories</label>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="ffuenf_childproductcategories">
                    <label>General Configuration</label>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                        </enable>
                    </fields>
                </general>
            </groups>
            <groups>
                <reassigncategories translate="label" module="ffuenf_childproductcategories">
                    <label>Reassign Categories Configuration</label>
                    <sort_order>2000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <timeframe translate="label">
                            <label>Timeframe for reassigning categories by the shell script</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </timeframe>
                    </fields>
                </reassigncategories>
            </groups>
        </ffuenf_childproductcategories>
    </sections>
</config>